  <metadata>
    <id>ActionResponseTypeAnalyzer</id>
    <version>1.0.0.0</version>
    <title>ActionResponseTypeAnalyzer</title>
    <authors>NCR Corporation</authors>
    <owners>NCR Corporation</owners>
